{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "schedule:nonOfficeHours"
  ],
  "labels": [
    "dependencies"
  ],
  "additionalBranchPrefix": "{{datasource}}-",
  "addLabels": [
    "{{datasource}}"
  ],
  "commitBodyTable": true,
  "updateNotScheduled": false,
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "matchCategories": [
        "java"
      ],
      "description": "GraphQL Java (ignoring snapshot builds)",
      "matchPackageNames": [
        "com.graphql-java:graphql-java"
      ],
      "allowedVersions": "/^[0-9]+\\.[0-9]+(\\.[0-9]+)?$/"
    },
    {
      "matchCategories": [
        "java"
      ],
      "description": "GraphQL Java Annotations",
      "matchPackageNames": [
        "io.github.graphql-java:graphql-java-annotations"
      ],
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+?$/"
    }
  ],
  "hostRules": [
    {
      "hostType": "maven",
      "matchHost": "https://pkgs.dev.azure.com/evolvingsystemsconsulting/_packaging/esc-common-java/maven/v1",
      "username": "evolvingsystemsconsulting",
      "password": "{{ secrets.DEVOPS_FEED_TOKEN }}"
    }
  ]
}
